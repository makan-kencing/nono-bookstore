{
    "name": "novelty/nono-bookstore",
    "description": "The Novelty N' Nonsense online bookstore",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.2",
        "ext-gd": "*",
        "ext-pdo": "*",
        "ext-intl": "*",
        "ext-xdebug": "*",
        "claviska/simpleimage": "^4.2.1",
        "filp/whoops": "^2.18.3",
        "phpmailer/phpmailer": "^6.10",
        "spomky-labs/otphp": "^11.3",
        "stripe/stripe-php": "^17.5"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47.0",
        "jetbrains/phpstorm-attributes": "^1.2",
        "phpmd/phpmd": "^2.15",
        "phpspec/phpspec": "^8.0.x-dev",
        "phpstan/phpstan": "^2.1.21",
        "phpunit/phpunit": "^12.2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/"
        ],
        "files": [
            "src/Utils/array.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
