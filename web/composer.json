{
    "name": "novelty/nono-bookstore",
    "description": "The Novelty N' Nonsense online bookstore",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "ext-xdebug": "*",
        "filp/whoops": "^2.18.3",
        "mark-gerarts/auto-mapper-plus": "^1.4.2",
        "nikic/fast-route": "^1.3.0",
        "stripe/stripe-php": "^17.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47.0",
        "friendsofphp/php-cs-fixer": "^3.82",
        "phpmd/phpmd": "^2.15",
        "phpspec/phpspec": "dev-^8.0.x",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.2",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
