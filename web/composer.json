{
    "name": "novelty/nono-bookstore",
    "description": "The Novelty N' Nonsense online bookstore",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "ext-xdebug": "*",
        "ext-gd": "*",
        "filp/whoops": "^2.18.3",
        "stripe/stripe-php": "^17.5",
        "claviska/simpleimage": "^4.2.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47.0",
        "friendsofphp/php-cs-fixer": "^3.85.1",
        "phpmd/phpmd": "^2.15",
        "phpspec/phpspec": "^8.0.x-dev",
        "phpstan/phpstan": "^2.1.21",
        "phpunit/phpunit": "^12.2.8",
        "squizlabs/php_codesniffer": "^3.13",
        "jetbrains/phpstorm-attributes": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
